        app:layout_constraintEnd_toEndOf="@+id/tvSenseTitle"
        app:layout_constraintStart_toStartOf="@+id/tvSenseTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSenseTitle" />

    <!-- Memory-->

    <TextView
        android:id="@+id/tvMemoryTitle"
        android:layout_width="@dimen/stat_title_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/simple_title_size"
        android:text="Memory"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSpeedTitle" />

    <EditText
        android:id="@+id/etMemory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="7"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tvMemoryTitle"
        app:layout_constraintStart_toStartOf="@+id/tvMemoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvMemoryTitle" />

    <!-- Resistence-->

    <TextView
        android:id="@+id/tvResistenceTitle"
        android:layout_width="@dimen/stat_title_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/simple_title_size"
        android:text="Resistence"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvAgilityTitle" />

    <EditText
        android:id="@+id/etResistence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="7"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tvResistenceTitle"
        app:layout_constraintStart_toStartOf="@+id/tvResistenceTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvResistenceTitle" />

