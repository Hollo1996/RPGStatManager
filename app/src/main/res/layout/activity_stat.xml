<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.character.StatActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbStat"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stats"
        app:layout_constraintBottom_toBottomOf="@id/tbStat"
        app:layout_constraintEnd_toEndOf="@id/tbStat"
        app:layout_constraintStart_toStartOf="@id/tbStat"
        app:layout_constraintTop_toTopOf="@+id/tbStat"
        android:textColor="@color/lightpurpule"
        android:textSize="@dimen/title_text_size"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="200dp" />


    <!-- Strength-->

    <TextView
        android:id="@+id/tvStrengthTitle"
        android:layout_width="@dimen/stat_title_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Strength"
        android:textSize="@dimen/simple_title_size"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbStat" />

    <EditText
        android:id="@+id/etStrength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="7"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tvStrengthTitle"
        app:layout_constraintStart_toStartOf="@+id/tvStrengthTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvStrengthTitle" />

    <!-- Speed-->

    <TextView
        android:id="@+id/tvSpeedTitle"
        android:layout_width="@dimen/stat_title_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="@dimen/simple_title_size"
        android:text="Speed"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etStrength" />

    <EditText
        android:id="@+id/etSpeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="7"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tvSpeedTitle"
        app:layout_constraintStart_toStartOf="@+id/tvSpeedTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSpeedTitle" />

    <!-- Agility-->

    <TextView
        android:id="@+id/tvAgilityTitle"
        android:layout_width="@dimen/stat_title_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="@dimen/simple_title_size"
        android:text="Agility"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSpeed" />

    <EditText
        android:id="@+id/etAgility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="7"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tvAgilityTitle"
        app:layout_constraintStart_toStartOf="@+id/tvAgilityTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvAgilityTitle" />

    <!-- Judging

    <TextView
        android:id="@+id/tvJudgingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="@dimen/simple_title_size"
        android:text="Judging"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
